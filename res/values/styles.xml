<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style name="HelpIcon">
		<item name="android:layout_width">12dp</item>
		<item name="android:layout_height">12dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_marginBottom">-7dp</item>
		<item name="android:layout_marginLeft">45dp</item>
	</style>
	
	<style name="WheelView">
		<item name="android:layout_height">110dp</item>
	</style>
	
	<style name="WheelView.Type">
	
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_marginLeft">15dp</item>
		<item name="android:layout_marginRight">15dp</item>
	</style>
	
	<style name="WheelView.Unit">
		<item name="android:layout_weight">1</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:layout_width">150dp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:layout_marginBottom">20dp</item>
	</style>
	
	<style name="Text" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:typeface">serif</item>
		<item name="android:shadowRadius">0.5</item>
		<item name="android:shadowColor">#333333</item>
	</style>
	
    <style name="Text.BigTitle">
    	<item name="android:layout_width">fill_parent</item>
		<item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="Text.SmallTitle">
    	<item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">150dp</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_marginTop">7dp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:drawableRight">@drawable/helpicon</item>
    </style>
    
    <style name="Text.Equals">
    	<item name="android:layout_weight">0.2</item>
    	<item name="android:visibility">invisible</item>
    	<item name="android:textStyle">bold|italic</item>
    	<item name="android:textSize">72sp</item>
    	<item name="android:textColor">#4C4C4C</item>
    	<item name="android:text">=</item>
    	<item name="android:layout_marginTop">-32dp</item>
    	<item name="android:layout_marginLeft">-5dp</item>
    	<item name="android:typeface">normal</item>
    </style>
    
    <style name="Text.Unit">
    	<item name="android:layout_gravity">center_horizontal</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:textSize">75sp</item>
    	<item name="android:textColor">#4C4C4C</item>
    </style>
    
    <style name="Text.Unit.WheelItem">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="Text.Unit.Result">
    	<item name="android:layout_width">120sp</item>
    	<item name="android:layout_weight">1.0</item>
    	<item name="android:layout_height">45dp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:visibility">invisible</item>
		<item name="android:textSize">21sp</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingBottom">6dp</item>
    </style>
</resources>